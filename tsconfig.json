{
  "compilerOptions": {
    "target": "ES6",                          // Use ES6 as the output target for compiled JavaScript.
    "module": "commonjs",                     // Use CommonJS module system (suitable for Node.js).
    "strict": true,                           // Enable all strict type-checking options.
    "esModuleInterop": true,                  // Enable interoperability between CommonJS and ES Modules.
    "skipLibCheck": true,                     // Skip type checking of declaration files.
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing for file names.
    "outDir": "./dist",                       // Specify the output directory for compiled files.
    "rootDir": "./src",                       // Specify the root directory for input files.
    "sourceMap": true,                        // Generate source maps for debugging.
    "removeComments": true,                   // Remove comments from the output.
    "noImplicitAny": true,                    // Disallow implicit 'any' types.
    "strictNullChecks": true,                 // Enable strict null checks.
    "noImplicitThis": true,                   // Disallow 'this' expressions with an implied 'any' type.
    "resolveJsonModule": true,                // Enable importing of .json files as modules.
    "typeRoots": ["./node_modules/@types"],   // Specify type declaration file locations.
    "lib": ["ES6"],                           // Specify library files to include in the compilation.
    "declaration": true                       // Generate .d.ts files alongside the compiled JavaScript files.
  },
  "include": ["src/**/*"],                    // Include all TypeScript files in the src directory.
  "exclude": ["node_modules", "dist", "tests/**/*.test.ts"] // Exclude node_modules, dist, and test files.
}